<?xml version="1.0" encoding="UTF-8"?>

<ExtensionManifest Version="7.0" ExtensionBundleId="posidon-ps"
    ExtensionBundleVersion="1.0.1"
    ExtensionBundleName="CEPPanelStart" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <ExtensionList>
        <Extension Id="posidon-ps" Version="1.0" />
    </ExtensionList>
    <ExecutionEnvironment>
        <HostList>
            <Host Name="PHXS" Version="16.0" />
            <Host Name="PHSP" Version="16.0" />
        </HostList>
        <LocaleList>
            <Locale Code="All" />
        </LocaleList>
        <RequiredRuntimeList>
            <RequiredRuntime Name="CSXS" Version="6.0" />
        </RequiredRuntimeList>
    </ExecutionEnvironment>
    <DispatchInfoList>
        <Extension Id="posidon-ps">
            <DispatchInfo>
                <Resources>
                    <MainPath>./index.html</MainPath>
                    <ScriptPath>./photoshop/external/engine.jsx</ScriptPath>
                    <CEFCommandLine>
                        <Parameter>--enable-nodejs</Parameter>
                    </CEFCommandLine>
                </Resources>
                <Lifecycle>
                    <AutoVisible>true</AutoVisible>
                </Lifecycle>
                <UI>
                    <Type>Panel</Type>
                    <Menu>Posidon-PS-CEP</Menu>
                    <Geometry>
                        <Size>
                            <Height>350</Height>
                            <Width>330</Width>
                        </Size>
                        <MinSize>
                            <Height>350</Height>
                            <Width>330</Width>
                        </MinSize>
                        <MaxSize>
                            <Height>1200</Height>
                            <Width>1000</Width>
                        </MaxSize>
                    </Geometry>
                    <Icons>
                        <Icon Type="Normal">./images/IconLight.png</Icon>
                        <Icon Type="RollOver">./images/IconLight.png</Icon>
                        <Icon Type="DarkNormal">./images/IconDark.png</Icon>
                        <Icon Type="DarkRollOver">./images/IconDark.png</Icon>
                    </Icons>
                </UI>
            </DispatchInfo>
        </Extension>
    </DispatchInfoList>
</ExtensionManifest>